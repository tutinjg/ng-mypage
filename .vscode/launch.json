{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ng serve (Brave)",
      "type": "pwa-chrome",
      "request": "launch",
      "preLaunchTask": "npm: start",
      "url": "http://localhost:4200/",
      "runtimeExecutable": "C:\\Program Files\\BraveSoftware\\Brave-Browser\\Application\\brave.exe", // <-- Brave path (Windows)
      "sourceMaps": true
    },
    {
      "name": "ng serve (Chrome)",
      "type": "pwa-chrome",
      "request": "launch",
      "preLaunchTask": "npm: start",
      "url": "http://localhost:4200/",
      "runtimeExecutable": "C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe", // <-- Chrome path (Windows)
      "sourceMaps": true
    },
    {
      "name": "ng test",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: test",
      "url": "http://localhost:9876/debug.html"
    }
  ]
}